<h1>My Recipe Box</h1>
<div class="row">
  <div class="col-md-6">
    <h3>Current Recipes</h3>
    <% if @recipes.any? %>
    <ul>
      <% @recipes.each do |recipe| %>
      <li><%= link_to recipe.name, recipe_path(recipe)%></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are no recipes yet.</p>
    <% end %>
  </div>

  <div class="col-md-6"> 
    <h3>Recipe by category</h3>
    <% if @tags.any? %>
    <ul>
      <% @tags.each do |tag| %>
      <li><%= link_to tag.category, tag_path(tag)%></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are no categorites to display.</p>
    <% end %>
  </div>
</div>

<form>
  <label for="search_ingredient">Search Recipes by Ingredient</label>
  <input type="text" name="search_ingredient">
  <button type="submit">Search</button>
</form>
<form>
  <button type="submit" name="all_recipes">All Recipes</button>
</form>
<p><%= link_to "Create New Recipe", new_recipe_path %></p>
<p><%= link_to "Add a tag", new_tag_path %></p>